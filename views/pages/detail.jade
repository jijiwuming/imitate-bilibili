extends ../layout

block content
	.container
		.row
			.col-md-7
				embed(src="http://static.hdslb.com/miniloader.swf",flashvars="aid=#{movie.flash}&page=#{movie.page}",allowfullscreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash" pluginspage="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash")
			.col-md-5
				dl.dl-horizontal
					dt AV号
					dd= movie.flash
					dt P数
					dd= movie.page
					dt 视频名
					dd= movie.title
					dt up主
					dd= movie.doctor
					dt 国家
					dd= movie.country
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary